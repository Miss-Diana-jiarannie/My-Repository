t5:
#include<iostream>
double tem(double);
using namespace std;
int main()
{
	double she;
	cout << "please enter a celsius valus: " << endl;
	cin >> she;
	double hua;
	hua = tem(she)
	cout << she << " degress Celsius is " << hua << " degress Fahrenheit." << endl;
	
	return 0;
}
double tem(double n)
{
	double a;
	a = n*1.8 + 32.0;
	return a;
}
t6:
#include<iostream>
using namespace std;
double gn(double);
int main()
{
	double chang;
	cout << "Enter the number of light years: " << endl;
	cin >> chang;
	double twdw;
	twdw = gn(chang);
	cout << chang << " light years " << "=" << twdw << " astronomical units." ;
	return 0;
}
double gn(double a)
{
	double b;
	b = a*63240;
	return b;
}
t7:
#include<iostream>
void time(int,int);
using namespace std;
int main()
{
	int hours;
	int minutes;
	cout << "Enter the number of hours: " << endl;
	cin >> hours;
	cout << "Enter the number of minutes: " << endl;
	cin >> minutes;
	time(hours,minutes);
	return 0; 
}
void time(int a,int b)
{
	cout << "time: " << a << ":" << b << endl;
}
判断是否考上大学
#include<iostream>
using namespace std;
int main()
{
	int score=0;
	cout << "请输入您的高考成绩： " << endl;
	cin >> score;
	if (score > 600)
	{
		if (score > 700)
		{
			cout << "恭喜您考入清华大学" << endl;
			cout << "666" << endl;
		}
		if (score > 650&&score<700)
			cout << "恭喜您考入北京大学" << endl;
		if (score > 620&&score<650)
			cout << "恭喜您考入中国人民大学" << endl;
		cout << "恭喜您考入一本大学" << endl;

	 }
	if (score > 500 && score < 600)
	{
		cout << "恭喜您考入二本大学" << endl;
	}
	if (score > 400 && score < 500)
	{
		cout << "恭喜您考入三本大学" << endl;
	}
	else
		cout << "很遗憾，您未能考上大学" << endl;
	return 0;
}
判断最重的小猪
#include<iostream>
using namespace std;
int main()
{
	int a,b,c;
	cout << "请输入abc三只小猪的体重" << endl;
	cin >> a >> b >> c;
	if(a>b)
	{
		if(a>c)
		{
			cout << "a是最重的" << endl; 
		}
		else if(a<c)
		{
			cout << "c是最重的" << endl; 
		}
		else if(a=c)
		{
			cout << "a和c都是最重的" << endl; 
		}
	 } 
	 else if(a<b)
	 {
	 	if(b<c)
	 	{
	 		cout << "c是最重的" << endl;
		 }
		 else if(b>c)
		 {
		 	cout << "b是最重的" << endl;
		 }
		 else if(b=c)
		 {
		 	cout << "b和c都是最重的" << endl; 
		 }
	 }
	 else if(a=b)
	 {
	 	if(a>c)
	 	{
	 		cout << "a和b都是最重的" << endl;
		 }
		 else if(a<c)
		 {
		 	cout << "c是最重的" << endl; 
		 }
		 else if(a=c)
		 {
		 	cout << "三只小猪一样重" << endl;
                 }
	 }
	 return 0；
}
电影打分（switch）
#include<iostream>
using namespace std;
int main()
{
	int a = 0;
	cout << " 请为电影<<东百往事>>打分： " << endl;
	cin >> a; 
	switch(a)
	{
		case 10:
		case 9:
			cout << "您认为这个电影是经典佳作。" << endl;
		break;
		case 8:
		case 7:
		case 6: 
			cout << "您认为这个电影很不错。" << endl;
		break;
		default:
		    cout << "您认为这是一部烂片。" << endl;
		    break;
	}
	return 0;
}
考试分级
#include<iostream>
using namespace std;
int main()
{
       int score;
       cout << "请输入考试分数： "  << endl;
       cin >> score;
       switch(score/10)
       {
       	case 10:case 9:
       		cout << "您的分数等级为A。" << endl;break;
       	case 8:case 7:
		   cout << "您的分数等级为B。" << endl;break;
		case 6:
		  cout << "您的分数等级为C。"  << endl;break;
		  default:
		  cout << "您的分数等级为D." << endl;break;	
	   }
	return 0;
}
求和1+3+5+L+99
#include<iostream>
using namespace std;
int main()
{
	int num = 1,sum = 0;
	while(num < 100)
	{
		sum = sum + num;
		++num,++num;
	}
	cout << sum << endl;	
	return 0;
}
猜数游戏
#include<iostream>
#include<cstdlib>
#include<ctime>
using namespace std;
int main()
{
	int num;
	int val;
	int c;
	srand((unsigned int)time(NULL));
	num = rand()%100+1; 
	cout << "请猜一个数： " << endl; 
	while(val != num&&c <= 5)
	{
		cin >> val;
		if(val > num&&c < 5)
		{
			cout << "您猜测的过大。" << endl;
		}
		else if(val < num&&c < 5)
		{
			cout << "您猜测的过小" << endl; 
		}
		else if(val = num&&c < 5) 
			cout << "恭喜您猜对了" << endl;
	
		c = ++c;
		if(c <= 5)
		{
			cout << "您还有" << 5-c << "次机会" << endl;
		}
		if(c > 5)
		{
			cout << "您失败了" << endl;
		}
}	
	return 0;
}
敲桌子游戏
#include<iostream> 
using namespace std;
int main()
{
	for(int num=1;num >= 1&&num <= 100;num++)
	if(num%7==0)
	{
		cout << "敲桌子" << endl; 
	}
	else if((num-7)%10==0)
	{
		cout << "敲桌子" << endl;
	}
	else if(((num/10)-7)%10==0)
	{
		cout << "敲桌子" << endl; 
	}
	else
	 cout << num << endl;
	return 0;
}
求解三位数水仙花数
#include<iostream>
using namespace std;
int main()
{
	int num = 100;
	do
	{
		if(num==((num/100)*(num/100)*(num/100)+((num-num/100*100)/10)*((num-num/100*100)/10)*((num-num/100*100)/10)+((num-num/100*100)-(num-num/100*100)/10*10)*((num-num/100*100)-(num-num/100*100)/10*10)*((num-num/100*100)-(num-num/100*100)/10*10)))
		{
		cout << num << endl;
		num++;
		}
	else
		num++;
	}
	while(num < 1000);
	
	
	return 0;
}
算邮费
#include<iostream>
using namespace std;
int main()
{
	double a,b,c,wei;
	cout << "enter your percel's longth, height in meter,and weight in kilogram: " << endl;
	cin >> a >> b >> c >> wei;
	if(a>1||b>1||c>1||wei>30)
	{
		cout << "No" << endl;
	}
	else
	{
		if(wei<=10)
		{
			cout << wei*0.8+0.2 << endl;
		}
		else if(wei<=20)
		{
			cout << wei*0.75+0.2 << endl;
		}
		else if(wei<30)
		{
			cout << wei*0.7+0.2 << endl;
		}
		else
		     cout << "No" << endl;
	}	
	return 0;
}
辗转相除求余数
#include<iostream>
using namespace std;
int main()
{
       int m,n,r;
	   cout << "请输入被除数和除数： " << endl;
	   cin >> m >> n;
	   r = m % n;
	   while(1)
	   {
	   	if(r == 0)
	   	{
	   		cout << "两个数的最大公约数是" << n << endl;
	   		break;
		}
	   	else if(r != 0)
	   	{
	   		m = n;
	   		n = r;
	   		r = m % n;
		}
	   } 
}

求斐波那契数列方法2
#include<iostream>
using namespace std;
int main()
{
      int n,a = 1,b = 1,i = 1; 
	  while(i <= 30)
	   {
	   	if(i == 1)
	   	{
	   		cout << a << " ";
		   }
	   	else 
	   	{
		   cout << b << " ";
		n = b;
	   	b = a + b;
	   	a = n; 
		}
	   	i++;
	   		if((i-1) % 5 == 0)
	   	{
	   		cout << endl;
		   }
		}		
	return 0;
 } 	
	
	
